include ../index.pug
block content
  div(class='container p-4')
    div(class='row')
      each link in Links
        div(class='col-md-3')
          div(class='card text-center')
            div(class='card-body')
              a(href=link.url target='_blank')
                h3(class='card-title text-uppercase') #{link.title}
              p(class='m-2') #{link.description}
              p #{link.time}
              a(href='/delete/#{(link.id)}'  class='btn btn-danger') Delete Link
              a(href="" class='btn btn-secondary') Edit