include ../index.pug
block content
  div(class='container p-4')
    div(class='row')
      if Links
        each link in Links
          div(class='col-md-3')
            div(class='card text-center')
              div(class='card-body')
                a(href=link.url target='_blank')
                  h3(class='card-title text-uppercase') #{link.title}
                p(class='m-2') #{link.description}
                p #{link.time}
                a(href='/links/delete/' + link.id  class='btn btn-danger') Delete Link
                a(href='/links/edit/' + link.id  class='btn btn-secondary') Edit
      else
        .col-md-4.mx-auto
          .card.card-body.text-center
            p There are not Links saved yet.
            a(href="/links/add" class='btn btn-primary') Create One!
